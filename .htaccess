# MVR Backend - Apache 최적화 설정
# XAMPP 환경용 .htaccess 파일

# 보안 헤더 설정
<IfModule mod_headers.c>
    Header always set X-Frame-Options "DENY"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;"
</IfModule>

# GZIP 압축 활성화
<IfModule mod_deflate.c>
    # HTML, CSS, JavaScript, Text, XML, Font 압축
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
</IfModule>

# 캐시 제어 설정
<IfModule mod_expires.c>
    ExpiresActive On
    
    # 이미지 파일 - 1주일
    ExpiresByType image/jpg "access plus 1 week"
    ExpiresByType image/jpeg "access plus 1 week"
    ExpiresByType image/gif "access plus 1 week"
    ExpiresByType image/png "access plus 1 week"
    ExpiresByType image/webp "access plus 1 week"
    ExpiresByType image/svg+xml "access plus 1 week"
    ExpiresByType image/x-icon "access plus 1 month"
    
    # CSS와 JavaScript - 1일
    ExpiresByType text/css "access plus 1 day"
    ExpiresByType application/javascript "access plus 1 day"
    ExpiresByType application/x-javascript "access plus 1 day"
    
    # 폰트 파일 - 1개월
    ExpiresByType application/x-font-ttf "access plus 1 month"
    ExpiresByType font/opentype "access plus 1 month"
    ExpiresByType application/x-font-woff "access plus 1 month"
    ExpiresByType application/font-woff2 "access plus 1 month"
    
    # HTML, PHP - 1시간
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType application/x-httpd-php "access plus 1 hour"
    
    # JSON API - 5분
    ExpiresByType application/json "access plus 5 minutes"
</IfModule>

# Cache-Control 헤더 설정
<IfModule mod_headers.c>
    # 정적 리소스 캐싱
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|ico|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
    
    # HTML 파일 캐싱
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # API 응답 캐싱
    <FilesMatch "\.php$">
        Header set Cache-Control "public, max-age=300"
    </FilesMatch>
</IfModule>

# URL 리라이팅 (Clean URLs)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # API 요청 처리
    RewriteRule ^api/([^/]+)/?$ api/data.php?endpoint=$1 [QSA,L]
    
    # 다국어 URL 처리
    RewriteRule ^(ko|en)/(.*)$ $2?lang=$1 [QSA,L]
    
    # 기본 언어 설정 (한국어)
    RewriteCond %{REQUEST_URI} !^/(ko|en)/
    RewriteCond %{REQUEST_URI} !^/api/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ ko/$1 [R=301,L]
</IfModule>

# MIME 타입 설정
<IfModule mod_mime.c>
    AddType application/font-woff2 .woff2
    AddType application/x-font-ttf .ttf
    AddType font/opentype .otf
    AddType image/svg+xml .svg
    AddType application/json .json
</IfModule>

# 보안 설정
# 민감한 파일들에 대한 접근 차단
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|swp)|~)$">
    Require all denied
</FilesMatch>

# .htaccess 파일 보호
<Files .htaccess>
    Require all denied
</Files>

# PHP 설정 파일 보호
<Files config.php>
    Require all denied
</Files>

# 로그 파일 보호
<FilesMatch "\.log$">
    Require all denied
</FilesMatch>

# 디렉토리 브라우징 비활성화
Options -Indexes

# 파일 업로드 크기 제한 (PHP를 통한 설정)
php_value upload_max_filesize 50M
php_value post_max_size 50M
php_value max_execution_time 300
php_value memory_limit 256M

# 에러 페이지 설정
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# CORS 설정 (API용)
<IfModule mod_headers.c>
    SetEnvIf Origin "^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$" AccessControlAllowOrigin=$0
    Header always set Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header always set Access-Control-Max-Age "3600"
</IfModule>

# OPTIONS 요청 처리
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# 성능 최적화 - Keep-Alive 설정
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# ETag 설정
FileETag MTime Size